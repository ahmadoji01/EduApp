<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.educationalapp.eduapp.educationalapp.registermodule.Register3Fragment"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center"
        android:text="@string/pilih_karakter_title_string" />

    <TextView
        android:id="@+id/FragmentRegister_charName_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/FragmentRegister_char_nav_left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_chevron_left_black_36dp" />

        <ImageView
            android:id="@+id/FragmentRegister_char_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_apps_black_36dp" />

        <ImageView
            android:id="@+id/FragmentRegister_char_nav_right_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_chevron_right_black_36dp" />
    </LinearLayout>

    <Button
        android:background="@color/colorButtonBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next_string"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        android:id="@+id/FragmentRegister_next_btn_2" />
</LinearLayout>
